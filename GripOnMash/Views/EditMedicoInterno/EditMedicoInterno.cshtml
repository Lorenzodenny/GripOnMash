@model GripOnMash.Models.ViewModels.EditMedicoInternoViewModel

<form asp-action="EditMedicoInterno" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Cognome"></label>
        <input asp-for="Cognome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Matricola"></label>
        <input asp-for="Matricola" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IsEnabled"></label>
        <input asp-for="IsEnabled" type="checkbox" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salva Modifiche</button>
</form>
