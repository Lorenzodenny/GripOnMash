@model GripOnMash.ViewModel.LoginAnagraficaViewModel

@{
    ViewData["Title"] = "Login per compilazione anagrafica";
}

<div class="d-flex justify-content-center align-items-center w-100 my-auto">
    <div class="modifica-profilo-card p-5 rounded-lg d-flex flex-column justify-content-evenly align-items-center">
        <div class="d-flex justify-content-center align-items-center w-100">
            <span class="signup-title">Login per completare il profilo</span>
        </div>

        <form asp-action="LoginAnagrafica" method="post" class="w-100" autocomplete="off">
            <div class="d-flex flex-column gap-2 gap-lg-3 align-items-center mt-4 w-100">
                <div class="w-100">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="w-100">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center w-100 mt-2">
                    <button type="submit" class="btn btn-primary w-100">Login e compila il profilo</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
