@model GripOnMash.ViewModel.EditAccountViewModel

@{
    ViewData["Title"] = "Modifica Account";
}

<div class="d-flex justify-content-center align-items-center w-100 my-auto">

    
    <div class="modifica-profilo-card p-5 rounded-lg d-flex flex-column justify-content-evenly align-items-center">
        
        
        <div class="d-flex justify-content-center align-items-center w-100">
            <span class="signup-title">Modifica Account</span>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div id="messaggio-successo" class="alert alert-success mt-3 text-center w-100">
                @TempData["SuccessMessage"]
            </div>
        }
        
        <form asp-controller="EditMedicoBase" asp-action="Edit" method="post" class="w-100" autocomplete="off">
            <input type="hidden" name="formType" value="account" />


            <!-- Campi di modifica -->
            <div class="d-flex flex-column gap-2 gap-lg-3 align-items-center mt-4 w-100">
                <div class="d-flex flex-column flex-lg-row gap-2 gap-lg-3 justify-content-start align-items-start w-100">
                    <div class="w-100">
                        <label asp-for="UserName">Nome utente (facoltativo)</label>
                        <input asp-for="UserName" class="form-control" placeholder="Nome utente" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="w-100">
                        <label asp-for="Email">Email (facoltativo)</label>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="w-100">
                        <label asp-for="PhoneNumber">Numero di Telefono (facoltativo)</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Numero di Telefono" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-center w-100 mt-2">
                    <button type="submit" class="btn btn-gemelli myButton w-100">Salva modifiche</button>
                </div>
            </div>
        </form>

        <hr class="w-100 my-4" />
        <!-- Sezione Cambio Password -->
        <div class="d-flex justify-content-center align-items-center w-100">
            <span class="signup-title">Cambia Password (facoltativo)</span>
        </div>

        <form asp-controller="EditMedicoBase" asp-action="Edit" method="post" class="w-100" autocomplete="off">
            <input type="hidden" name="formType" value="password" />

            <div class="d-flex flex-column gap-2 gap-lg-3 align-items-center mt-4 w-100">
                <div class="w-100">
                    <label asp-for="CurrentPassword">Password attuale</label>
                    <input asp-for="CurrentPassword" class="form-control" type="password" placeholder="Password attuale" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="w-100">
                    <label asp-for="NewPassword">Nuova Password (facoltativo)</label>
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="Nuova Password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="w-100">
                    <label asp-for="ConfirmPassword">Conferma Nuova Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Conferma Nuova Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center w-100 mt-2">
                    <button type="submit" class="btn btn-gemelli myButton w-100">Cambia Password</button>
                </div>
            </div>
        </form>
        <hr class="w-100 my-4" />
        <!-- Cancella il profilo -->
        <div class="d-flex justify-content-center align-items-center w-100">
            <span class="signup-title">Cancella il profilo</span>
        </div>
        <div class="d-flex justify-content-center w-100 mt-2">
            <!-- Bottone per aprire il modale -->
            <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Cancella Account</button>
        </div>
    </div>

</div>

<!-- Modale di conferma cancellazione -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Conferma Cancellazione Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Sei sicuro di voler cancellare l'account <strong>@Model.UserName</strong>? Questa azione non può essere annullata.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <form asp-controller="DeleteAccount" asp-action="DeleteAccount" method="post">
                    <button type="submit" class="btn btn-danger">Conferma Cancellazione</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    window.onload = function () {
        var successMessage = document.getElementById("messaggio-successo");
        if (successMessage) {
            setTimeout(function () {
                successMessage.style.display = 'none';
            }, 5000); 
        }
    };
</script>
    <partial name="_ValidationScriptsPartial" />
}
