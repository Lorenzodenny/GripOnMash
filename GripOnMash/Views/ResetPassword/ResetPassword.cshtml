@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reimposta la password";
}


<div class="d-flex justify-content-center align-items-center w-100 my-auto">

    <!--begin::reset password card-->
    <div class="modifica-profilo-card p-5 rounded-lg d-flex flex-column justify-content-evenly align-items-center">

        <!--begin::header title-->
        <div class="d-flex justify-content-center align-items-center w-100">
            <span class="signup-title">Reimposta la password</span>
        </div>
        <!--end::header title-->

        <!--begin::reset password form-->
        <form asp-action="ResetPassword" method="post" class="w-100">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <!--begin::form body-->
            <div class="d-flex flex-column gap-2 gap-lg-3 align-items-center mt-4 w-100">

                <!--begin::password fields-->
                <div class="w-100">
                    <label asp-for="Password">Nuova password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="w-100">
                    <label asp-for="ConfirmPassword">Conferma nuova password</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <!--end::password fields-->

                <!--begin::submit button-->
                <div class="d-flex justify-content-center align-items-center w-100 mt-2">
                    <button type="submit" class="btn btn-primary w-100">Reimposta password</button>
                </div>
                <!--end::submit button-->

            </div>
            <!--end::form body-->

        </form>
        <!--end::reset password form-->

    </div>
    <!--end::reset password card-->

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
