@model GripOnMash.ViewModel.MedicoBaseAnagraficaViewModel

<h2>Compila il Form Anagrafico</h2>

<form asp-action="CompilaAnagrafica" method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cognome">Cognome</label>
        <input asp-for="Cognome" class="form-control" />
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Eta">Età</label>
        <input asp-for="Eta" class="form-control" type="number" />
        <span asp-validation-for="Eta" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumeroTelefono">Numero di Telefono</label>
        <input asp-for="NumeroTelefono" class="form-control" />
        <span asp-validation-for="NumeroTelefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CodiceFiscale">Codice Fiscale</label>
        <input asp-for="CodiceFiscale" class="form-control" />
        <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Indirizzo">Indirizzo</label>
        <input asp-for="Indirizzo" class="form-control" />
        <span asp-validation-for="Indirizzo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Specializzazione">Specializzazione</label>
        <input asp-for="Specializzazione" class="form-control" />
        <span asp-validation-for="Specializzazione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumeroAlbo">Numero Albo</label>
        <input asp-for="NumeroAlbo" class="form-control" />
        <span asp-validation-for="NumeroAlbo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmailPersonale">Email Personale</label>
        <input asp-for="EmailPersonale" class="form-control" />
        <span asp-validation-for="EmailPersonale" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PartitaIVA">Partita IVA</label>
        <input asp-for="PartitaIVA" class="form-control" />
        <span asp-validation-for="PartitaIVA" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Invia Anagrafica</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
