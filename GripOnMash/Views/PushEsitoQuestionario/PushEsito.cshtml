@model List<Domanda>

<form asp-action="PushEsito" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <h4>@Model[i].DomandaTesto</h4>
        <div class="btn-group" role="group">
            @foreach (var risposta in Model[i].Risposte)
            {
                <input type="radio" id="risposta_@risposta.RispostaId" name="RisposteSelezionate[@i].RispostaId" value="@risposta.RispostaId" class="btn-check" autocomplete="off" />
                <label class="btn btn-outline-primary" for="risposta_@risposta.RispostaId">@risposta.RispostaTesto</label>

                <input type="hidden" name="RisposteSelezionate[@i].DomandaId" value="@Model[i].DomandaId" />
            }
        </div>
    }

    <div class="form-group mt-4">
        <label>Il paziente è idoneo?</label><br />
        <input type="checkbox" name="PazienteIdoneo" value="true" id="pazienteIdoneo" />
        <label for="pazienteIdoneo">Sì</label>
    </div>

    <button type="submit" class="btn btn-success mt-3">Invia Esito</button>
</form>
